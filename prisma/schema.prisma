generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement()) // ID numérico automátic (1, 2, 3...)
  email     String   @unique                       // No puede haber dos iguales
  password  String                                 // Guardaremos la pass encriptada
  name      String
  role      String   @default("candidate")         // "candidate" o "company"
  resumeUrl String?                                // URL del CV en Cloudinary
  createdAt DateTime @default(now())               // Fecha de registro automática
  jobs      Job[]                                  // <--- Agrega esto (Un usuario tiene MUCHOS jobs)
}

model Job {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  salary      String?
  // --- NUEVOS CAMPOS ---
  category    String   @default("Otros") // Default para no romper ofertas viejas
  modality    String   @default("Remoto")
  location    String?
  // ---------------------
  createdAt   DateTime @default(now())
  authorId    Int
  author      User     @relation(fields: [authorId], references: [id])
  tags        Tag[]
}
model Tag {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  type        String
  jobs        Job[]

}
