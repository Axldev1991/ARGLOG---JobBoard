generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model User {
  id        Int      @id @default(autoincrement()) // ID numérico automátic (1, 2, 3...)
  email     String   @unique                       // No puede haber dos iguales
  password  String                                 // Guardaremos la pass encriptada
  name      String
  role      String   @default("candidate")         // "candidate" o "company"
  resumeUrl String?                                // URL del CV en Cloudinary
  resumePublicId String?                           // ID para borrar en Cloudinary
  
  // --- PERFIL PROFESIONAL (Candidato) ---
  headline  String?  // Ej: "Senior React Developer"
  bio       String?  // Sobre mí
  phone     String?
  linkedin  String?
  city      String?
  
  createdAt DateTime @default(now())               // Fecha de registro automática
  jobs      Job[]                                  // <--- Agrega esto (Un usuario tiene MUCHOS jobs)
  applications Application[] 
  
  // --- PERFIL EMPRESA (Opcional, 1-a-1) ---
  companyProfile CompanyProfile? 
}

model Job {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  salary      String?
  // --- NUEVOS CAMPOS ---
  category    String   @default("Otros") 
  modality    String   @default("Remoto")
  location    String?
  // ---------------------
  createdAt   DateTime @default(now())
  authorId    Int
  
  // Cascade: Si borras al usuario Author, borras el Job
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  tags        Tag[]
  applications Application[]
}

model Tag {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  type        String
  jobs        Job[]
}

model Application {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  status    String   @default("PENDING") // PENDING, REJECTED, HIRED

  // Relación: Quién se postula
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relación: A qué oferta
  jobId     Int
  job       Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)

  // Candado: ¡Solo una postulación por usuario por oferta!
  @@unique([userId, jobId])
}

model CompanyProfile {
  id          Int     @id @default(autoincrement())
  logo        String? // URL del logo (subido a Cloudinary)
  website     String? // https://techcorp.com
  description String? // "Somos líderes en..."
  
  // Relación 1-a-1 con User
  userId      Int     @unique
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  legalName   String
  cuit        String 
  industry    String
}
